@model WebApplication3.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}
<h3 style="color: red; font-size: 30px;">
Delete Product
</h3>
<h3 style="color: red; font-size: 24px;">
    Are you sure you want to delete this Product?
</h3>
<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category.Name</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="confirm" value="Yes" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

